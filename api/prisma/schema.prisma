generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  username  String   @unique
  email     String   @unique
  password  String
  age       Int
  address   String
  avatar    String?
  createdAt DateTime @default(now())
  posts     Post[]
}
model Post {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  images    String[]
  bedroom   Int
  bathroom  Int
  price     Int
  address   String
  latitude  Float
  longitude Float
  category  Category
  type      Type
  amenities  String[]
  description String
  size      Int
  user      User @relation(fields: [userId], references: [id])
  userId    String @db.ObjectId
  createdAt DateTime @default(now())
}

enum Category {
  apartment
  house
  room
}
enum Type {
  buy
  rent
}

